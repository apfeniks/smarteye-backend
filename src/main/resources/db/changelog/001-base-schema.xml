<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- 001: базовые таблицы -->
    <changeSet id="001-01-tech-pallets" author="smarteye">
        <createTable tableName="tech_pallets">
            <column name="id"              type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rfid_tag"        type="varchar(64)"/>
            <column name="status"          type="varchar(32)" remarks="lifecycle status"/>
            <column name="length_mm"       type="integer"/>
            <column name="width_mm"        type="integer"/>
            <column name="height_mm"       type="integer"/>
            <column name="tare_weight_kg"  type="numeric(10,3)"/>
            <column name="created_at"      type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at"      type="timestamp with time zone"/>
        </createTable>
        <createIndex tableName="tech_pallets" indexName="idx_tech_pallets_rfid">
            <column name="rfid_tag"/>
        </createIndex>
    </changeSet>

    <changeSet id="001-02-pointcloud-files" author="smarteye">
        <createTable tableName="pointcloud_files">
            <column name="id"              type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="object_key"      type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="format"          type="varchar(16)" remarks="parquet/npz/ply"/>
            <column name="size_bytes"      type="bigint"/>
            <column name="sha256"          type="varchar(64)"/>
            <column name="created_at"      type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <createIndex tableName="pointcloud_files" indexName="idx_pointcloud_files_key">
            <column name="object_key"/>
        </createIndex>
    </changeSet>

    <changeSet id="001-03-measurements" author="smarteye">
        <createTable tableName="measurements">
            <column name="id"                  type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tech_pallet_id"      type="bigint">
                <constraints nullable="false" referencedTableName="tech_pallets" referencedColumnNames="id" foreignKeyName="fk_meas_pallet"/>
            </column>
            <column name="pointcloud_file_id"  type="bigint">
                <constraints nullable="true"  referencedTableName="pointcloud_files" referencedColumnNames="id" foreignKeyName="fk_meas_pcf"/>
            </column>
            <column name="profiles_count"      type="integer" remarks="~2800"/>
            <column name="status"              type="varchar(32)" remarks="CREATED/UPLOADED/QA_IN_PROGRESS/QA_DONE/ERROR"/>
            <column name="meta"                type="jsonb"/>
            <column name="created_at"          type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at"          type="timestamp with time zone"/>
        </createTable>
        <createIndex tableName="measurements" indexName="idx_measurements_pallet">
            <column name="tech_pallet_id"/>
        </createIndex>
        <createIndex tableName="measurements" indexName="idx_measurements_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
