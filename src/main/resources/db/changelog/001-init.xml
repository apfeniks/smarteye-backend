<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="001-init" author="smarteye">
        <createTable tableName="devices">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_devices"/>
            </column>
            <column name="type" type="VARCHAR(32)"/>
            <column name="serial" type="VARCHAR(64)"/>
            <column name="status" type="VARCHAR(16)" defaultValue="ACTIVE"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
